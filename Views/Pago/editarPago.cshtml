@model inmobiliaria_Toloza_Lopez.Models.Pago

@{
    ViewData["Title"] = "Editar Pago";
}

<div class="text-center">
    <h1 class="display-4">Editar Pago</h1>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card p-4 shadow">
                <form id="formPago" method="post" action="@Url.Action("EditarPago", "Pago")">
                    <div class="form-group">
                        <label for="contrato">Seleccionar Contrato:</label>
                        <input type="number" class="form-control" id="id_contrato" name="id_contrato"
                            value="@Model.id_contrato">
                    </div>
                    <div class="form-group">
                        <label for="importe">Importe:</label>
                        <input type="number" class="form-control" id="importe" name="importe" value="@Model.importe">
                    </div>
                    <div class="form-group">
                        <label for="numero_pago">Numero de pago:</label>
                        <input type="number" class="form-control" id="numero_pago" name="numero_pago"
                            value="@Model.numero_pago">
                    </div>
                    <div class="form-group">
                        <label for="detalle">Detalle:</label>
                        <textarea class="form-control" id="detalle" name="detalle" rows="3">@Model.detalle</textarea>
                    </div>
                    <button type="submit" class="btn btn-primary" id="btnSubmit">Guardar Cambios</button>
                </form>
            </div>
        </div>
    </div>
</div>


@if (TempData["mensaje"] != null)
{
    <div class="alert alert-success mt-4" role="alert">
        @TempData["mensaje"]
    </div>
}

</div>
</div>
</div>

@section Scripts {
    <script>
        document.getElementById("btnSubmit").addEventListener("click", function (event) {
            event.preventDefault();
            Swal.fire({
                title: '¿Estás seguro?',
                text: 'Estás por realizar una acción importante. ¿Deseas continuar?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Sí, continuar',
                cancelButtonText: 'Cancelar',
                allowOutsideClick: false
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById("formPago").submit();
                }
            });
        });
    </script>
}
