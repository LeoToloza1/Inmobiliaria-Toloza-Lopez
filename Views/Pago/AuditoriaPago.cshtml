@model IEnumerable<Pago>
@{
    ViewData["Title"] = "Auditoría de pagos";
}

<div class="container ">
    <div class="card">
        <div class="card-body">
            <h1>Listado de pagos creados</h1>

            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Datos del Contrato</th>
                            <th scope="col">Fecha de Pago</th>
                            <th scope="col">Importe</th>
                            <th scope="col">Número de Pago</th>
                            <th scope="col">Detalle</th>
                            <th scope="col">Creado por</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var pago in Model)
                        {
                            <tr>
                                <td>
                                    <strong>Dirección:</strong> @pago.Contrato.inmueble.direccion <br />
                                    <strong>Uso:</strong> @pago.Contrato.inmueble.uso <br />
                                    <strong>Tipo:</strong> @pago.Contrato.inmueble.tipoInmueble.tipo
                                </td>
                                <td>@pago.fecha_pago.ToShortDateString()</td>
                                <td>$@($"{pago.importe:N2}")</td>
                                <td>@pago.numero_pago</td>
                                <td>@pago.detalle</td>
                                <td>@pago.creado_usuario.nombre @pago.creado_usuario.apellido - @pago.creado_usuario.email
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
