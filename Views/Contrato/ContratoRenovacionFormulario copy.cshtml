@model inmobiliaria_Toloza_Lopez.Models.Contrato
@{
var contrato=Model;
contrato.fecha_inicio = contrato.fecha_fin;

Console.WriteLine(Model.ToString());
ViewData["Title"] = "Editar Pago";
}


<div class="text-center">
    <h1 class="display-4">RenoEditar Pago</h1>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card p-4 shadow">
                <form id="formPago" method="post" action="@Url.Action("renovacion", "contrato")">
                    <div class="form-group">
                        <label for="contrato">Información del Contrato:</label>
                        <label class="form-control">
                            @Model.inquilino.nombre
                            @Model.inquilino.apellido -
                            @Model.inmueble.direccion
                        </label>
                        <input type="number" id="id_contrato" name="id_contrato" value="@Model.id" hidden>
                    </div>
                    <div class="form-group">
                        <label for="importe">Importe:</label>
                        <div class="form-control"></div>
                        <input type="number" class="form-control" id="importe" name="importe" hidden
                            value="">
                    </div>
                    <div class="form-group">
                        <label for="numero_pago">Número de pago:</label>
                        <div class="form-control"></div>
                        <input type="number" class="form-control" id="numero_pago" name="numero_pago" hidden
                            value="">
                    </div>
                    <div class="form-group">
                        <label for="detalle">Detalle:</label>
                        <textarea class="form-control" id="detalle" name="detalle" rows="3"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary" id="btnSubmit">Guardar Cambios</button>
                </form>
            </div>
        </div>
    </div>
</div>

@if (TempData["mensaje"] != null)
{
    <div class="alert alert-success mt-4" role="alert">
        @TempData["mensaje"]
    </div>
}

@section Scripts {
    <script>
        document.getElementById("btnSubmit").addEventListener("click", function (event) {
            event.preventDefault();
            Swal.fire({
                title: '¿Estás seguro?',
                text: 'Estás por realizar una acción importante. ¿Deseas continuar?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Sí, continuar',
                cancelButtonText: 'Cancelar',
                allowOutsideClick: false
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById("formPago").submit();
                }
            });
        });
    </script>
}
