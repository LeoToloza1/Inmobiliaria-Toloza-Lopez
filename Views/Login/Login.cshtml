@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@section login {
    <!-- Contenido de la sección login -->
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">Inicio de sesión</div>
                    <div class="card-body">
                        <form method="POST" asp-controller="Login" asp-action="login">
                            <div class="form-group">
                                <label for="email">Correo electrónico</label>
                                <input type="email" class="form-control" id="email" name="email" />
                            </div>
                            <div class="form-group">
                                <label for="password">Contraseña</label>
                                <input type="password" class="form-control" id="password" name="password" />
                            </div>
                            <button type="submit" class="btn btn-primary">Iniciar sesión</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        @if (!ViewData.ModelState.IsValid || (ViewData["ErrorMessage"] != null && ViewData["ErrorMessage"].Equals("El email y la contraseña son requeridos.")))

        {
            <div class="alert alert-danger" role="alert">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <span>@error.ErrorMessage</span>

                    <br />
                }
            </div>
        }

    </div>
}
