@model IEnumerable<Inmueble>
@{
    ViewData["Title"] = "Inicio";
}
<div class="text-center">
    <h1 class="display-4">Listado de Inmuebles</h1>
</div>
<div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th colspan="6">Cantidad: @Model.Count()</th>
                <th>
                    <a href="/inquilino/create" class="btn btn-primary"><i class="fa fa-user-plus"></i> Nuevo
                        Inmueble</a>
                </th>
            </tr>
            <tr>
                <th class="text-center">Tipo</th>
                <th class="text-center">Ambientes</th>
                <th class="text-center">Coordenadas</th>
                <th class="text-center">Precio</th>
                <th class="text-center">Propietario</th>
                <th class="text-center">Estado</th>
                <th class="text-center">Ciudad</th>
                <th class="text-center">Zona</th>
                <th class="text-center">Descripcion</th>
                <th colspan="2" class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var inmuebles in Model)
            {
                <tr>
                    <td class="text-center">@inmuebles.id_tipo</td>
                    <td class="text-center">@inmuebles.ambientes</td>
                    <td class="text-center">@inmuebles.coordenadas</td>
                    <td class="text-center">@inmuebles.precio</td>
                    <td class="text-center">@inmuebles.id_propietario</td>
                    <td class="text-center">@inmuebles.estado</td>
                    <td class="text-center">@inmuebles.id_ciudad</td>
                    <td class="text-center">@inmuebles.id_zona</td>
                    <td class="text-center">@inmuebles.descripcion</td>
                    <td colspan="2" class="text-center">
                        <a class="btn btn-secondary mx-2" asp-controller="Inquilino" asp-action="update"
                            asp-route-id="@inmuebles.id"><i class="fas fa-user-edit"></i> Editar </a>
                        <a class="btn btn-danger mx-2" asp-controller="Inquilino" asp-action="delete"
                            asp-route-id="@inmuebles.id"><i class="fas fa-user-times"></i>
                            Borrar </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="container">
    <p>
        << paginador>>
    </p>
</div>
@section Scripts {
    @* <script src="~/js/inquilino.js"></script> *@
}
