@model IEnumerable<Inmueble>
@{
    ViewData["Title"] = "Inicio";
        var request = ViewContext.HttpContext.Request;
    string urlActual = request.Path + request.QueryString;
}
<div class="text-center">
    <h1 class="display-4">Listado de Inmuebles</h1>
</div>
<div>
        <div class="container-fluid p-0">
        <div class="border-top border-bottom mb-1 mt-5">
            <form method="get" action="/inmueble" name="form-inmueble">
                <div class="d-flex justify-content-between align-items-center px-3 py-2">
                    <div class="d-flex justify-content-evenly w-75">                        
                         <div class="form-check">
                            <input class="form-check-input" type="radio" name="usoInmueble" id="todosRadio" value="all">
                            <label class="form-check-label" for="todosRadio">
                                Todos
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="usoInmueble" id="comercialRadio" value="comercial">
                            <label class="form-check-label" for="comercialRadio">
                                Comercial
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="usoInmueble" id="residencialRadio" value="residencial">
                            <label class="form-check-label" for="residencialRadio">
                                Residencial
                            </label>
                        </div>
                        <div class="flex-item">
                            <input name="precio" class="form-control form-control-sm" type="number" placeholder="Precio" aria-label="tipo-inmueble">
                        </div> 
                        <div class="flex-item">
                            <select name="tipo" class="form-select p-1" aria-label="Slect tipo">
                                <option value=0 selected>Casa</option>
                                <option value=1>Departamento</option>
                                <option value=2>Quinta</option>
                            </select>
                        </div>
                        <div class="flex-item">
                            <select name="ciudad"class="form-select p-1" aria-label="Select Ciudad">
                                <option value=0 selected>Todas</option>
                                <option value=1>Merlo</option>
                                <option value=2>Carpinteria</option>
                            </select>
                        </div>
                        <div class="flex-item">
                            <button type="submit" class="btn btn-primary py-1">Buscar</button>
                        </div>
                    </div>
                    <div class="mt-2">
                        <ul class="pagination">
                            <li class="page-item">
                                    <a class="page-link" href="#" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                        <span class="sr-only">Anterior</span>
                                    </a>
                            </li>
                            <li class="page-item">
                                    <a class="page-link" href="#">
                                        1
                                    </a>
                            </li>
                            <li class="page-item">
                                    <a class="page-link" href="#">
                                        2
                                    </a>
                            </li>
                            <li class="page-item">
                                    <a class="page-link" href="#">
                                        3
                                    </a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                    <span class="sr-only">Siguiente</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </form>
         </div>
    </div>
    
    <table class="table table-striped">
        <thead>
            @* <tr>
                <th colspan="8">Cantidad: @Model.Count()</th>
                <th>
                    <a href="/inmueble/create" class="btn btn-primary"><i class="fa fa-user-plus"></i> Nuevo
                        Inmueble</a>
                </th>
            </tr> *@
            <tr>
                <th class="text-center">Tipo</th>
                <th class="text-center">Uso</th>
                <th class="text-center">Ambientes</th>
                <th class="text-center">Mapa</th>
                <th class="text-center">Precio</th>
                <th class="text-center">Propietario</th>
                <th class="text-center">Estado</th>
                <th class="text-center">Ciudad</th>
                <th class="text-center">Zona</th>
                <th class="text-center">Descripcion</th>
                <th colspan="4" class="text-center">Adminstracion</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var inmuebles in Model)
            {
                <tr>
                    <td class="text-center">@inmuebles.tipoInmueble.tipo</td>
                    <td class="text-center">@inmuebles.uso</td>
                    <td class="text-center">@inmuebles.ambientes</td>
                    <td class="text-center"><a class="btn btn-secondary mx-2" href="https://www.google.com/maps?q=@inmuebles.coordenadas " target="_blank" ><i class="fas fa-map-marked-alt mx-2"></i>Mapa</a></td>
                    <td class="text-center">@inmuebles.precio</td>
                    <td class="text-center">@inmuebles.propietario.apellido, @inmuebles.propietario.nombre </td>
                    <td class="text-center">@inmuebles.estado</td>
                    <td class="text-center">@inmuebles.ciudad.ciudad</td>
                    <td class="text-center">@inmuebles.zona.zona</td>
                    <td class="text-center">@inmuebles.descripcion</td>
                    <td colspan="4" class="text-center">
                        <a class="btn btn-secondary mx-2" asp-controller="inmueble" asp-action="Edit"
                            asp-route-id="@inmuebles.id"><i class="fas fa-user-edit"></i> Editar </a>
                        <a class="btn btn-danger mx-2" asp-controller="inmueble" asp-action="delete"
                            asp-route-id="@inmuebles.id"><i class="fas fa-user-times"></i>
                            Borrar </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {
    <script src="~/js/inmueble.js"></script>
}
