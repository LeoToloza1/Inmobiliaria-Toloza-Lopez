
@model inmobiliaria_Toloza_Lopez.Models.Inquilino

@{
    ViewData["Title"] = "Inicio"; 
    Console.WriteLine( ViewBag.tipoForm);
    int id=0;
    var nombre="";
    var apellido="";
    var dni="";
    var email="";
    var verbo="save";
    if(ViewBag.tipoForm == "Editando Inquilino"){
        Console.WriteLine(ViewData["Inquilino"]);
        Console.WriteLine(Model.id);
        Console.WriteLine(Model.nombre);
        Console.WriteLine(Model.apellido);
        Console.WriteLine(Model.dni);
        Console.WriteLine(Model.email);
        id=Model.id;
        nombre=Model.nombre;
        apellido=Model.apellido;
        dni=Model.dni;
        email=Model.email;
        verbo=ViewBag.verboForm;            
    }
}

<div class="container w-75 m-5">
    <div class="text-center">
        <h1 class="display-3">@ViewBag.tipoForm</h1>
    </div>
    <form  asp-action="@verbo" asp-controller="inquilino" asp-route-id="@(((int)id != 0) ? (int)id : "")">
        <div class="w-100 m-5">
            <div class="w-75 m-5">
                <label for="nombre-inquilino" class="">Nombre Inquilino</label>
                <input type="text" class="form-control" id="nombre-inquilino" placeholder="Ingrese nombre" name="nombre"
                    required verfy="text" value="@nombre">
            </div>
            <div class="w-75 m-5">
                <label for="apellido-inquilino" class="">Apellido Inquilino</label>
                <input type="text" class="form-control" id="apellido-inquilino" placeholder="Ingrese apellido"
                    name="apellido" required verfy="text" value="@apellido">
            </div>
            <div class="w-75 m-5">
                <label for="dni-inquilino" class="">Documento Inquilino</label>
                <input type="text" class="form-control" id="dni-inquilino" placeholder="Ingrese DNI" name="dni" required
                    title="Ingrese un dni valido" verfy="number" value="@dni">
            </div>
            <div class="w-75 m-5">
                <label for="email-inquilino" class="">Email Inquilino</label>
                <input type="email" class="form-control" id="email-inquilino" placeholder="Ingrese Email" name="email"
                    title="Ingrese un email valido" required verfy="email" value="@email">
            </div>
        </div>
        <div class="modal-footer  justify-content-around">
            <a href="/inquilino" class="btn btn-secondary">
                Cerrar
            </a>
            <button type="reset" class="btn btn-warning">Borrar</button>
            <button type="submit" class="btn btn-primary">Enviar</button>
        </div>
    </form>
</div>
@section Scripts {
    <script src="~/js/inquilino.js"></script>
}