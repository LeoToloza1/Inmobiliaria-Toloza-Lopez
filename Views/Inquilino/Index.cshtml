@model IEnumerable<Inquilino>
@{
    ViewData["Title"] = "Inicio";
    var  userRol = ((System.Security.Claims.ClaimsIdentity)User.Identity).FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value;
}
<div class="text-center">
    <h1 class="display-4">Listado de Inquilinos</h1>
</div>
<div class="container-fluid p-0">
        <label class="form-check-label fs-4" for="formInquilino">Busqueda Inquilino</label>
        <div class="border-top border-bottom mb-1 ">            
            <div class="d-flex justify-content-between align-items-center px-3 py-2">                
                <form id= "formInquilino" method="get" action="/inquilino" name="form-iquilino" class="d-flex justify-content-evenly w-100">
                </form>
                    <a href="/inquilino/create" class="btn btn-primary p-2 mx-2">
                        <i class="fa fa-user-plus"> Inquilino</i>
                    </a>
            </div>
           
        </div>
<div>
    <table class="table table-striped">
        <thead>
            <tr>             
                <th class="text-center">Nombre</th>
                <th class="text-center">Apellido</th>
                <th class="text-center">DNI</th>
                <th class="text-center">Telefono</th>
                <th class="text-center">Email</th>
                <th colspan="2" class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var inquilino in Model)
            {
                <tr>
                    <td class="text-center">@inquilino.nombre</td>
                    <td class="text-center">@inquilino.apellido</td>
                    <td class="text-center">@inquilino.dni</td>
                    <td class="text-center">@inquilino.telefono</td>
                    <td class="text-center">@inquilino.email</td>
                    <td colspan="2" class="text-center">
                        <a class="btn btn-secondary p-1 mx-2" asp-controller="inquilino" asp-action="update" asp-route-id="@inquilino.id">
                            <i class="fas fa-user-edit"> Editar</i> 
                        </a>
                        <a class="btn btn-secondary p-1 mx-2" asp-controller="contrato" asp-action="list" asp-route-id="@inquilino.id" target="_blank">
                            <i class="fas fa-solid fa-file-contract"> Ver Contratos</i>
                        </a>                                       
                        @if (userRol == "administrador"){
                        <a class="btn btn-danger p-1 mx-2" asp-controller="inquilino" asp-action="delete" asp-route-id="@inquilino.id">
                            <i class="fas fa-user-times"> Borrar</i>
                        </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="container">
<p><< paginador >> </p>    
</div>
@section Scripts {    
    @* <script src="~/js/inquilino.js"></script> *@
}


